html
	head
		title Hackoverflow System
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/question.css')
		link(rel='stylesheet', href='/stylesheets/createQuestion.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css')
		script(data-main='scripts/main', src='scripts/require.js')

	body
		.container
			nav(class="navbar navbar-inverse", role="navigation")

					div#bs-example-navbar-collapse-1(class="collapse navbar-collapse")

						ul(class="nav navbar-nav")
							li.active
								a(href="/#/createQuestion") Ask
							li
								a(href="#") Users
							li
								a(href="#") Tags
							li
								a(href="/#/questions") Questions

						div(class="col-sm-3 col-md-3 pull-right")
							form.navbar-form(role="search")
								.input-group
									input.form-control(type="text", placeholder="Search", name="search-term")
									.input-group-btn
										button(class="btn btn-default", type="submit")
											i(class="glyphicon glyphicon-search")

						div(class="col-sm-3 col-md-3 pull-right")
							ul(class="nav navbar-nav")
								li
									a(href="/#/signup") Sign Up
								li
									a(href="/#/signup") Sign In

						//- span.clrfix
			block content
