.votes #{votes_count} 
	.sub-text votes
.answers #{answers_count}
	.sub-text answers
.views #{views_count}
	.sub-text views
.question
	.question-title
		a(href="#", id="title") #{title} 
	.metadata 
		.date #{(new Date(date)).getDate()}-#{(new Date(date)).getMonth()}-#{(new Date(date)).getFullYear()} 
		.author 
			a(href="#") #{author}
	ul.tags-list
		for tag in tags
			li #{tag}
	span.clrfix
.clrfix